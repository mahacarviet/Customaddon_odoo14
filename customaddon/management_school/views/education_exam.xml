<odoo>
    <data>
        <record id="examination_form" model="ir.ui.view">
            <field name="name">examination.form</field>
            <field name="model">education.exam</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="confirm_exam" type="object" attrs="{'invisible': [('state', '!=', 'draft')]}"
                                class="oe_highlight" string="Xác nhận bài kiểm tra"/>
                        <button name="close_exam" type="object" attrs="{'invisible': [('state', '!=', 'ongoing')]}"
                                string="Đóng bài kiểm tra"/>
                        <button name="cancel_exam" type="object" attrs="{'invisible': [('state', '!=', 'draft')]}"
                                string="Hủy bài kiểm tra"/>
                        <field name="state" readonly="1" widget="statusbar" statusbar_visible="draft,ongoing,close"/>
                    </header>
                    <sheet>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <group>
                            <group>
                                <field name="exam_type" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="term_code" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="class_id"
                                       attrs="{'readonly': [('state', '!=', 'draft')]}" options="{'no_create': True}"/>
                                <field name="division_id"
                                       attrs="{'readonly': [('state', '!=', 'draft')]}" options="{'no_create': True}"/>
                            </group>
                            <group>
                                <field name="subject_id" attrs="{'readonly': [('state', '!=', 'draft')]}"
                                       options="{'no_create': True}"/>
                                <field name="academic_year" attrs="{'readonly': [('state', '!=', 'draft')]}"
                                       options="{'no_create': True}"/>
                                <field name="start_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                <field name="end_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            </group>
                        </group>
                        <separator/>
                        <group name="attachment_file" string="Bản mềm bài kiểm tra">
                            <field name="exam_attachment_id" widget="many2many_binary" class="oe_inline"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="examination_tree" model="ir.ui.view">
            <field name="name">examination.tree</field>
            <field name="model">education.exam</field>
            <field name="arch" type="xml">
                <tree limit="30">
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="state"/>
                    <field name="academic_year" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="education_exam_search" model="ir.ui.view">
            <field name="name">education.exam.search</field>
            <field name="model">education.exam</field>
            <field name="arch" type="xml">
                <search string="Tìm kiếm bài kiểm tra">
                    <field name="division_id" string="Lớp học" filter_domain="[('division_id', 'ilike', self)]"/>
                    <field name="class_id" string="Khối" filter_domain="[('class_id', 'ilike', self)]"/>
                    <field name="subject_id" string="Môn học" filter_domain="[('subject_id', 'ilike', self)]"/>
                    <field name="academic_year" string="Năm học" filter_domain="[('academic_year', 'ilike', self)]"/>
                    <group expand='0' string='Sắp xếp theo'>
                        <filter string='Lớp' name="class" domain="[]" context="{'group_by' : 'division_id'}"/>
                        <filter string='Khối' name="class_filter" domain="[]" context="{'group_by' : 'class_id'}"/>
                        <filter string='Môn học' name="subject_filter" domain="[]"
                                context="{'group_by' : 'subject_id'}"/>
                        <filter string='Năm học' name="year_filter" domain="[]"
                                context="{'group_by' : 'academic_year'}"/>
                        <filter string='Trạng thái' name="state_filter" domain="[]" context="{'group_by' : 'state'}"/>
                        <filter string='Loại bài kiểm tra' name="type_filter" domain="[]"
                                context="{'group_by' : 'exam_type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="act_examination_view" model="ir.actions.act_window">
            <field name="name">Bài kiểm tra</field>
            <field name="res_model">education.exam</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
        </record>

    </data>
</odoo>