<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="action_student_id_card" model="ir.actions.report">
            <field name="name">Thẻ sinh viên</field>
            <field name="model">education.student</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">management_school.report_student_id_card</field>
            <field name="report_file">management_school.report_student_id_card</field>
            <field name="print_report_name">'Thẻ sinh viên - %s' % (object.name)</field>
            <field name="binding_model_id" ref="model_education_student"/>
        </record>

        <record id="action_faculty_id_card" model="ir.actions.report">
            <field name="name">Thẻ giáo viên</field>
            <field name="model">education.faculty</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">management_school.report_faculty_id_card</field>
            <field name="report_file">management_school.report_faculty_id_card</field>
            <field name="print_report_name">'Thẻ giáo viên - %s' % (object.name)</field>
            <field name="binding_model_id" ref="model_education_faculty"/>
        </record>

        <record id="paperformat_student_application" model="report.paperformat">
            <field name="name">Đơn đăng ký học A4</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">70</field>
            <field name="margin_bottom">28</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">50</field>
            <field name="dpi">90</field>
        </record>

        <record id="action_student_application_report" model="ir.actions.report">
            <field name="name">Đơn đăng ký học</field>
            <field name="model">education.application</field>
            <field name="report_type">qweb-pdf</field>
            <field name="paperformat_id" ref="management_school.paperformat_student_application"/>
            <field name="report_name">management_school.report_student_application</field>
            <field name="report_file">management_school.report_student_application</field>
            <field name="print_report_name">'Đơn đăng ký học - %s' % (object.name)</field>
            <field name="binding_model_id" ref="model_education_application"/>
        </record>

        <record id="report_exam_result" model="ir.actions.report">
            <field name="name">Kết quả đánh giá bài kiểm tra</field>
            <field name="model">education.exam.result</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">management_school.report_exam_results</field>
            <field name="report_file">management_school.report_exam_results</field>
            <field name="binding_model_id" ref="model_education_exam_result"/>
            <field name="binding_type">report</field>
        </record>

        <record id="report_student_score_mark_one" model="ir.actions.report">
            <field name="name">Bảng điểm HK1</field>
            <field name="model">education.score.student</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">management_school.report_student_score_marks_one</field>
            <field name="report_file">management_school.report_student_score_marks_one</field>
            <field name="binding_model_id" ref="model_education_score_student"/>
            <field name="binding_type">report</field>
        </record>

        <record id="report_student_score_mark_two" model="ir.actions.report">
            <field name="name">Bảng điểm HK2</field>
            <field name="model">education.score.student</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">management_school.report_student_score_marks_two</field>
            <field name="report_file">management_school.report_student_score_marks_two</field>
            <field name="binding_model_id" ref="model_education_score_student"/>
            <field name="binding_type">report</field>
        </record>

    </data>
</odoo>
